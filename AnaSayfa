    <script>
        // Global Yardımcı Fonksiyonlar (Aynı kaldı)
        function handleLogoError(img) {
            console.log('Logo yüklenemedi, alternatif yöntem deneniyor...');
            img.src = 'https://lh3.googleusercontent.com/d/' + '1P5miDYVdbxcko4gDOYGOqyxWRYZbj1LD';
            img.onerror = function() {
                console.log('Alternatif logo da yüklenemedi');
                img.style.display = 'none';
                const container = img.parentElement;
                container.innerHTML = '<div style="width: 150px; height: 150px; background: linear-gradient(135deg, var(--tkk-green), var(--tkk-light-green)); border-radius: 50%; display: flex; justify-content: center; align-items: center; color: white; font-size: 24px; font-weight: bold;">DT</div>';
            };
        }

        function toggleMenuCard(menuHeader) {
            const menuCard = menuHeader.parentElement;
            const allMenuCards = document.querySelectorAll('.menu-card');
            allMenuCards.forEach(function(card) {
                if (card !== menuCard) { card.classList.remove('active'); }
            });
            menuCard.classList.toggle('active');
        }

        // Yardımcı Fonksiyon: Sayıyı formatlar ve birim ekler (Aynı kaldı)
        function formatAndAddUnit(value, unit, decimal = false) {
            let options = { maximumFractionDigits: decimal ? 2 : 0 };
            if (decimal) { options = { minimumFractionDigits: 2, maximumFractionDigits: 2 }; }
            const formattedValue = value.toLocaleString('tr-TR', options);
            return `${formattedValue} ${unit}`;
        }
        
// fetchGeneralInfo() fonksiyonunu bu CANLI veri çeken kod ile değiştirin.
function fetchGeneralInfo() {
    // 1. Tarihi hemen ayarla
    document.getElementById('general-date').textContent = new Date().toLocaleDateString('tr-TR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });

    // Yükleniyor durumunu göster
    document.getElementById('general-weather').textContent = 'Yükleniyor...';
    document.getElementById('general-usd').textContent = 'Yükleniyor...';
    document.getElementById('general-eur').textContent = 'Yükleniyor...';


    // --- Hava Durumunu Apps Script'ten çek ---
    google.script.run
        .withSuccessHandler(function(result) {
            document.getElementById('general-weather').textContent = result;
        })
        .withFailureHandler(function() {
            document.getElementById('general-weather').textContent = 'Hata (Hava)';
        })
        .getLiveWeather();

    // --- Döviz Kurlarını Apps Script'ten çek ---
    google.script.run
        .withSuccessHandler(function(result) {
            document.getElementById('general-usd').textContent = result.usd;
            document.getElementById('general-eur').textContent = result.eur;
        })
        .withFailureHandler(function() {
            document.getElementById('general-usd').textContent = 'Hata (USD)';
            document.getElementById('general-eur').textContent = 'Hata (EUR)';
        })
        .getLiveCurrency();
        
}

        // ÜÇ VERİ SETİNİ ÇEKEN ANA FONKSİYON
        function fetchAllSummaryData() {
            // 1. GENEL BİLGİ PANELİ (Güvenli, anında yüklenir)
            fetchGeneralInfo(); 
            
            // 2. BEKLEYEN ÇIKIŞ VERİLERİNİ ÇEK (Apps Script çağrısı)
            google.script.run
                .withSuccessHandler(function(data) {
                    document.getElementById('gubre-count').value = formatAndAddUnit(data.Gübre, 'Ton', true);
                    document.getElementById('tohum-count').value = formatAndAddUnit(data.Tohum, 'Kg');
                    document.getElementById('yem-count').value = formatAndAddUnit(data.Yem, 'Kg');
                    document.getElementById('motorin-count').value = formatAndAddUnit(data.Motorin, 'Lt');
                })
                .withFailureHandler(function(error) {
                    console.error("Bekleyen çıkış verileri alınamadı: " + error);
                    document.getElementById('gubre-count').value = 'Hata';
                })
                .getWaitingOutputSummary();

            // 3. VERESİYE KAYITLARI VERİLERİNİ ÇEK (Apps Script çağrısı)
            google.script.run
                .withSuccessHandler(function(data) {
                    document.getElementById('veresiye-gubre-count').value = formatAndAddUnit(data.Gübre, 'Ton', true);
                    document.getElementById('veresiye-tohum-count').value = formatAndAddUnit(data.Tohum, 'Kg');
                    document.getElementById('veresiye-yem-count').value = formatAndAddUnit(data.Yem, 'Kg');
                    document.getElementById('veresiye-motorin-count').value = formatAndAddUnit(data.Motorin, 'Lt');
                })
                .withFailureHandler(function(error) {
                    console.error("Veresiye kayıtları verileri alınamadı: " + error);
                    document.getElementById('veresiye-gubre-count').value = 'Hata';
                })
                .getVeresiyeSummary();
        }

        // KRİTİK DÜZELTME: Yükleme Ekranı Kontrolü
        window.addEventListener('load', function() {
            // 1. Logo ekranı geçişini yöneten asıl setTimeout
            setTimeout(function() {
                document.getElementById('loadingScreen').style.opacity = '0';
                
                setTimeout(function() {
                    document.getElementById('loadingScreen').style.display = 'none';
                    
                    // !!! BURASI ANA MENÜYÜ ANINDA GÖSTERİR !!!
                    document.getElementById('mainScreen').style.display = 'block'; 
                    
                    // Veri çekme işlemini başlat (hata alsa bile menü artık görünecek)
                    fetchAllSummaryData(); 
                }, 500);
            }, 2000);
        });

        // --- Apps Script Wrapper Fonksiyonları (Aynı kaldı) ---
        function openPesinSatis() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getPesinSatisUrl(); }
        function openCikisFormu() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).withFailureHandler(error => alert('Çıkış Formu açılırken hata oluştu: ' + error)).getCikisFormuUrl(); }
        function openFisTekrariFormu() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).withFailureHandler(error => alert('Fiş Tekrarı Formu açılırken hata oluştu: ' + error)).getFisTekrariUrl(); }
        function openFisIptaliFormu() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).withFailureHandler(error => alert('Fiş İptal Formu açılırken hata oluştu: ' + error)).getFisIptaliUrl(); }
        function openStokGoruntule() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getStokGoruntuleUrl(); }
        function openStokGuncelle() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getStokGuncelleUrl(); }
        function openStokEkle() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getStokEkleUrl(); }
        function openVeresiyeYonetim() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getVeresiyeYonetimUrl(); }
        function openListeGoruntule() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getListeGoruntuleUrl(); }
        function openOrtakListesi() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getOrtakListesiUrl(); }
        function openOrtakDisiListesi() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getOrtakDisiListesiUrl(); }
        function openDepoGiris() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getDepoGirisUrl(); }
        function openDepoCikis() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getDepoCikisUrl(); }
        function openDepoKayitlariniGoruntule() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getDepoKayitlariniGoruntuleUrl(); }
        function openHamaliyeHesaplama() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getHamaliyeHesaplamaUrl(); }
        function openTalepTakibi() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getTalepTakibiUrl(); }
        function openStokSayim() { google.script.run.withSuccessHandler(url => window.open(url, '_top')).getStokSayimUrl(); }
    </script>
